<div class="card">
  <h3 style="text-align: center;">Pesquisa de TCCs</h3>

  <div class="card-body">
    <form action="/tcc/index/p" method="POST" class="form-inline">
      <input class="form-control mr-2 col-sm-7" type="search" placeholder="Pesquisar" name="pesquisa"
        aria-label="Search">
      <select class="form-control mr-sm-2 col-sm-2" name="filtro">
        <option>Tema</option>
        <option>Orientador</option>
        <option>Aluno</option>
        <option>Titulo</option>
      </select>
      <button class="btn btn-outline-success my-2 my-sm-0 col-sm-2" type="submit">Pesquisar</button></a>
    </form>

  </div>
</div>
<style>
  #datepicker {
    width: 300px;
  }
</style>

<br>
<h5 style="text-align: center;">Resultado</h5>
<div class="card" style="margin-bottom: 10em;">
  <div class="card-body">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Data</th>
          <th scope="col">Aluno</th>
          <th scope="col">Orientador</th>
          <th scope="col">Tema</th>
          <th scope="col">Detalhes</th>
          <th scope="col">Download</th>

          <th scope="col">Ação</th>

        </tr>
      </thead>


      <tbody>
        {{#each trabalhos}}
        <tr>
          <th scope="row">{{data}}</th>
          <td align="center">{{orientando}}</td>
          <td align="center">{{orientador}}</td>
          <td align="center">{{tema}}</td>
          <td align="center"><a href="/tcc/cadastro/exibe/{{_id}}"><i class="fas fa-question-circle"
                style="color: rgba(41, 128, 185,1.0);"></i></a></td>
          <td align="center"><a href="/tcc/cadastro/exibeDoc/{{documento}}"><i class="fas fa-download" style="color: rgba(192, 57, 43,1.0);"></i></a></td>

          <td>

            <a href="/tcc/cadastro/edit/{{_id}}"><button class="btn btn-success pl-3 mb-1" type="submit"><i
                  class="fas fa-pencil-alt"></i></button></a>

            <form action="/tcc/cadastro/deletar" method="POST">
              <input type="hidden" name="id" value="{{_id}}">

              <button class="btn btn-danger px-3 py-1" type="submit"><i class="fa fa-trash"></i></button></a>

            </form>
          </td>
        </tr>

        {{else}}

        {{/each}}
      </tbody>
    </table>

  </div>
</div>