<style>
    .detalhes_req:hover {
        background: rgba(0, 169, 161, 0.3);
        cursor: pointer;
    }
</style>
<div class="col m12 s12 detalhes_req">
    <a class="waves-effect waves-light btn" onclick="history.go(-1);"
        style="background: #34a5a1; color: white; float: right;">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>
</div>
<br>
<h3>Detalhe do TCC</h3>
<div class="card" style="margin-bottom: 10em;">
    <div class="card-body">
        <input type="hidden" name="id" value="{{trabalho._id}}">
        <div class="row">
            <div class="col-6">
                <label for="titulo" class=" mt-3">Titulo:</label>
                <input type="text" class="form-control col-12" name="titulo" value="{{trabalho.titulo}}" readonly>
            </div>
            <div class="col-3">
                <label for="tema" class=" mt-3">Tema:</label>
                <input type="text" class="form-control col-sm-12" name="tema" value="{{trabalho.tema}}" readonly>
            </div>
            <div class="col-3">
                <label for="assunto" class=" mt-3">Assunto:</label>
                <input type="text" class="form-control col-sm-12" name="assunto" value="{{trabalho.assunto}}" readonly>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="exampleFormControlTextarea1" class=" mt-3">Resumo:</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="resumo" required
                    readonly>{{trabalho.resumo}} </textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label for="aluno" class=" mt-3">Aluno:</label>
                <input type="text" class="form-control col-sm-12" name="orientador" value="{{trabalho.orientador}}"
                    readonly>
            </div>
            <div class="col-4">
                <label for="orientador" class=" mt-3">Orientador:</label>
                <input type="text" class="form-control col-sm-12" name="orientando" value="{{trabalho.orientando}}"
                    readonly>
            </div>
            <div class="col-4">
                <label for="membros" class=" mt-3">Membros da banca:</label>
                <input type="text" class="form-control col-sm-12" name="membros" value="{{trabalho.membros}}" readonly>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label for="horario" class=" mt-3">Horário:</label>
                <input type="time" class="form-control col-sm-12" name="horario" value="{{trabalho.horario}}" readonly>

            </div>
            <div class="col-4">
                <label for="local" class=" mt-3">Local:</label>
                <input type="text" class="form-control col-sm-12" name="local" value="{{trabalho.local}}" readonly>
            </div>
            <div class="col-4">
                <label for="data" class=" mt-3">Data da defesa:</label>
                <input type="text" class="form-control col-sm-12" id="dateDefesa" name="data" value="{{trabalho.data}}"
                    readonly>
            </div>
        </div>
        <br>
        <a href="/tcc/cadastro/exibeDoc/{{trabalho.documento}}"><button type="submit" class="btn btn-primary btn-lg"
                style="background: rgba(46, 204, 113,1.0)">
                <i class="fas fa-download" style="color: rgb(245, 245, 245);"></i> PDF</button></a>
        </form>
    </div>
</div>
<script>
    var aux = document.getElementById("dateDefesa").value
    var date = new Date(aux),
        dia = date.getDate().toString(),
        diaF = (dia.length == 1) ? '0' + dia : dia,
        mes = (date.getMonth() + 1).toString(), //+1 pois no getMonth Janeiro começa com zero.
        mesF = (mes.length == 1) ? '0' + mes : mes,
        anoF = date.getFullYear();
    document.getElementById("dateDefesa").value = diaF + "/" + mesF + "/" + anoF
</script>