<style>
    .detalhes_req:hover {
        background: rgba(0, 169, 161, 0.3);
        cursor: pointer;
    }
</style>
<div class="col m12 s12 detalhes_req">
    <a class="waves-effect waves-light btn" onclick="history.go(-1);"
        style="background: #34a5a1; color: white; float: right;">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>
</div>
<br>
<h3>Editar TCC</h3>
<div class="card" style="margin-bottom: 10em;">
    <div class="card-body">
        <form action="/tcc/cadastro/edit" method="POST">
            <input type="hidden" name="id" value="{{trabalho._id}}">

            <label for="titulo" class=" mt-3">Titulo:</label>
            <input type="text" class="form-control col-sm-12" placeholder="Titulo" name="titulo" value="{{trabalho.titulo}}" required>

            <label for="tema" class=" mt-3">Tema:</label>
            <input type="text" class="form-control col-sm-12" placeholder="Tema" name="tema" value="{{trabalho.tema}}" required> 

            <label for="assunto" class=" mt-3">Assunto:</label>
            <input type="text" class="form-control col-sm-12" placeholder="Assunto" name="assunto" value="{{trabalho.assunto}}" required>

            <label for="exampleFormControlTextarea1" class=" mt-3">Resumo:</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="resumo" required>{{trabalho.resumo}}</textarea>

            <label for="orientador" class=" mt-3">Orientador:</label>
            <input type="text" class="form-control col-sm-12" placeholder="Orientador" name="orientador" value="{{trabalho.orientador}}" required>

            <label for="orientando" class=" mt-3">Orientando:</label>
            <input type="text" class="form-control col-sm-12" placeholder="Orientando" name="orientando" value="{{trabalho.orientando}}" required>

            <label for="local" class=" mt-3">Local:</label>
            <input type="text" class="form-control col-sm-12" placeholder="Local" name="local" value="{{trabalho.local}}" required>

            <label for="data" class=" mt-3">Data da defesa:</label>
            <input type="date" class="form-control col-sm-12" placeholder="Data" name="data" required>

            <label for="membros" class=" mt-3">Membros da banca:</label>
            <input type="text" class="form-control col-sm-12" placeholder="Membros" name="membros" value="{{trabalho.membros}}" required>
            <br>
            <button type="submit" class="btn btn-primary btn-lg" style="background: rgba(46, 204, 113,1.0)">Salvar</button>
            <button type="button" class="btn btn-secondary btn-lg" style="background:rgba(52, 152, 219,1.0)">Inserir Documento</button>
            <button type="button" class="btn btn-secondary btn-lg" style="background: rgba(231, 76, 60,1.0)">Cancelar</button>
        </form>
    </div>
</div>