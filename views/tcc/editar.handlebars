<h3>Editar TCC</h3>
<div class="card" style="margin-bottom: 10em;">
    <div class="card-body">
        <form action="/tcc/cadastro/edit" method="POST">
            <input type="hidden" name="id" value="{{trabalho._id}}">

            <div class="row">
            <div class="col-6">
                <label for="titulo" class=" mt-3">Titulo:</label>
                <input type="text" class="form-control col-12" name="titulo" value="{{trabalho.titulo}}" required>
            </div>
            <div class="col-3">
                <label for="tema" class=" mt-3">Tema:</label>
                <input type="text" class="form-control col-sm-12" name="tema" value="{{trabalho.tema}}" required>
            </div>
            <div class="col-3">
                <label for="assunto" class=" mt-3">Assunto:</label>
                <input type="text" class="form-control col-sm-12" name="assunto" value="{{trabalho.assunto}}" required>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="exampleFormControlTextarea1" class=" mt-3">Resumo:</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="6" name="resumo" required
                    required>{{trabalho.resumo}} </textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label for="aluno" class=" mt-3">Aluno:</label>
                <input type="text" class="form-control col-sm-12" name="orientador" value="{{trabalho.orientador}}"
                    required>
            </div>
            <div class="col-4">
                <label for="orientador" class=" mt-3">Orientador:</label>
                <input type="text" class="form-control col-sm-12" name="orientando" value="{{trabalho.orientando}}"
                    required>
            </div>
            <div class="col-4">
                <label for="membros" class=" mt-3">Membros da banca:</label>
                <input type="text" class="form-control col-sm-12" name="membros" value="{{trabalho.membros}}" required>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label for="horario" class=" mt-3">Hor√°rio:</label>
                <input type="time" class="form-control col-sm-12" name="horario" value="{{trabalho.horario}}" required>

            </div>
            <div class="col-4">
                <label for="local" class=" mt-3">Local:</label>
                <input type="text" class="form-control col-sm-12" name="local" value="{{trabalho.local}}" required>
            </div>
            <div class="col-4">
                <label for="data" class=" mt-3">Data da defesa:</label>
                <input type="text" class="form-control col-sm-12" id="dateDefesa" name="data" value="{{trabalho.data}}"
                    required>
            </div>
        </div>
            <br>
            <button type="submit" class="btn btn-primary btn-lg" style="background: rgba(46, 204, 113,1.0)"><i class="fa fa-save mr-2"></i>Salvar</button>
            <button type="button" class="btn btn-secondary btn-lg" style="background:rgba(52, 152, 219,1.0)"><i class="fa fa-upload mr-2"></i>Alterar Documento</button>
            <button type="button" class="btn btn-secondary btn-lg" style="background: rgba(231, 76, 60,1.0)"><i class="fa fa-trash mr-2"></i>Deletar</button>
        </form>
    </div>
</div>